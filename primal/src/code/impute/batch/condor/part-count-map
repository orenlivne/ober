#!/bin/bash
#-------------------------------------------------------------------
# Generate columns: chromosome, part#, start bp, stop bp
# Run on a directory generated by split.py.
#-------------------------------------------------------------------
for i in `find $1 -name "*.tped"`; do s=`echo "$i" | sed 's/.*\/hutt_chr\([0-9]\+\)_part\([0-9]\+\).*/\1 \2/g'`; awk {'print $4'} $i | awk -v name="$s" 'NR == 1 { max=$1; min=$1 } { if ($1>max) max=$1; if ($1<min) min=$1; }  END {printf "%s %d %d\n", name, min, max}'; done
